            elif  [[ "${WIDTH}" == 720 && "${HEIGHT}" == 512 ]] ; then
                _add_video_filter "crop=720:480:0:32"
            elif  [[ "${WIDTH}" != 720 && "${HEIGHT}" != 480 ]] ; then
