                MIDDLEOPTIONS+=(-crf 23)
                if [ "${FILESECONDS%.*}" -gt "7200" ] ; then
                    MIDDLEOPTIONS+=(-maxrate 800k)
                elif [ "${FILESECONDS%.*}" -gt "3600" ] ; then
