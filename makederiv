        elif [[ "${OUTPUT_TYPE}" == "dvd" ]] ; then
            DARRATIO=$(echo "scale=3 ; ${DAR}" | bc)
            if [ $(echo "scale=5 ; ${DARRATIO} > 1.5" | bc -l) = 1 ] ;then
                ASPECT="16/9"
