            if  [[ "${WIDTH}" == 720 && "${HEIGHT}" == 486 ]] ; then
                _add_video_filter "crop=720:480:0:4"
            elif  [[ "${WIDTH}" == 720 && "${HEIGHT}" == 512 ]] ; then
                _add_video_filter "crop=720:480:0:32"
            fi
            _add_video_filter "yadif"
        elif [[ "${OUTPUT_TYPE}" == "streamable" ]]; then
