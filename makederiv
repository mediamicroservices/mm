            COUNTER=0
            while [ "${COUNTER}" -lt "${VERTICAL_MARKINGS}" ]; do
                ((COUNTER++))
                MARK="$(echo "scale=6; $DURATION * ($COUNTER / $VERTICAL_MARKINGS)" | bc)"
